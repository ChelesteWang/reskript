{
  "private": true,
  "name": "reskript",
  "version": "0.0.1",
  "repository": "https://github.com/ecomfe/reskript",
  "author": "otakustay <otakustay@gmail.com>",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "pnpm run -r --parallel lint",
    "test": "pnpm run -r --stream test",
    "build": "pnpm run -r build",
    "build-clean": "pnpm run -r --parallel clean && npm run build",
    "release": "lerna version --conventional-commits --no-push --force-publish",
    "ci": "pnpm install && pnpm run build-clean && pnpm run lint && pnpm run test",
    "preversion": "pnpm run ci",
    "prepack": "pnpm install && pnpm run build-clean",
    "version": "pnpm install && git add pnpm-lock.yaml",
    "deploy": "lerna publish from-package",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "cpy": "^8.1.2",
    "husky": "^7.0.1",
    "lerna": "^4.0.0",
    "semver": "^7.3.5",
    "yargs": "^17.0.1"
  }
}

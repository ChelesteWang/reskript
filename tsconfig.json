{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES2018",
        "allowJs": false,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "strict": true,
        "noFallthroughCasesInSwitch": true,
        "skipLibCheck": true,
        "declaration": true,
        "baseUrl": ".",
        "paths": {
            "webpack": ["./node_modules/@types/webpack/index.d.ts"],
        },
    },
    "include": [
        "packages/*/src/**/*.ts"
    ],
    "exclude": [
        "**/__tests__/**"
    ]
}
